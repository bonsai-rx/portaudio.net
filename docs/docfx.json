{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "properties": {
        "ProduceReferenceAssembly": "true"
      },
      "src": [
        {
          "src": "../src/",
          "files": [
            "PortAudioNet/*.csproj",
            "PortAudioNet.Native/*.csproj"
          ]
        }
      ],
      "output": "../artifacts/docs/api/",
      "enumSortOrder": "declaringOrder",
      "memberLayout": "separatePages",
      "filter": "filter.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "*.md",
          "toc.yml",
          "articles/**/*.md",
          "articles/**/toc.yml"
        ]
      },
      {
        "src": "../",
        "files": "*.md"
      },
      {
        "src": "../artifacts/docs/api/",
        "dest": "api",
        "files": "**/*.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "logo.svg",
          "favicon.ico",
          "images/**"
        ]
      }
    ],
    "overwrite": [
      "apidoc/**/*.md"
    ],
    "output": "../artifacts/docs/site/",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "sitemap": {
      "baseUrl": "https://bonsai-rx.org/portaudio.net"
    },
    "globalMetadata": {
      "_appName": "PortAudio.NET",
      "_appTitle": "PortAudio.NET",
      "_appFooter": "&copy; Bonsai Foundation CIC and Contributors. Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a>",
      "_appLogoPath": "logo.svg",
      "_appFaviconPath": "favicon.ico",
      "_enableNewTab": true,
      "_enableSearch": true,
      "_gitContribute": {
        "apiSpecFolder": "docs/apidoc"
      }
    }
  }
}